---
import Layout from '../../layouts/AltLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Altfooter.astro';

const posts = [
  {
    id: 'how-choose-system',
    title: 'Cómo Elegir el Mejor Sistema Operativo para la Privacidad: Guía Completa de Linux',
    excerpt: "Descubre las mejores distribuciones de Linux enfocadas en la privacidad y cómo configurarlas para máxima protección.",
    date: 'May 15, 2025',
    author: 'Vicente Aguilar',
    authorRole: 'Privacy Researcher',
    category: 'Product Updates',
    image: 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80'
  },
  {
    id: 'why-linux',
    title: '¿Por Qué Elegir Linux para la Privacidad?',
    excerpt: 'Explora cómo Linux ofrece transparencia, seguridad y control absoluto sobre tu privacidad digital.',
    date: 'April 28, 2025',
    author: 'Vicente Aguilar',
    authorRole: 'Privacy Researcher',
    category: 'New Features',
    image: 'https://images.unsplash.com/photo-1555774698-0b77e0d5fac6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80'
  },
  {
    id: 'grapheneos-vs-ios',
    title: 'GrapheneOS vs iOS – ¿Cuál es Mejor para la Privacidad?',
    excerpt: `Comparativa profunda entre GrapheneOS e iOS para determinar cuál ofrece mejor protección de datos personales.`,
    date: 'April 10, 2025',
    author: 'Vicente Aguilar',
    authorRole: 'Privacy Researcher',
    category: 'Developer Updates',
    image: 'https://images.unsplash.com/photo-1581291518633-83b4ebd1d83e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80'
  },
  {
    id: 'disinformation-power',
    title: 'El Poder del Descontrol: Cómo Crear Confusión a Través de la Desinformación',
    excerpt: 'Aprende a utilizar la desinformación como herramienta estratégica para proteger tu privacidad.',
    date: 'March 22, 2025',
    author: 'Vicente Aguilar',
    authorRole: 'Privacy Researcher',
    category: 'Product Updates',
    image: 'https://images.unsplash.com/photo-1600880292203-757bb62b4baf?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80'
  },
  {
    id: 'worth-disappearing',
    title: '¿Vale la Pena Desaparecer? Éxitos y Fracasos en la Búsqueda de la Privacidad Absoluta',
    excerpt: 'Examina casos reales de éxito y fracaso en la búsqueda del anonimato total y aprende de sus lecciones.',
    date: 'March 5, 2025',
    author: 'Vicente Aguilar',
    authorRole: 'Privacy Researcher',
    category: 'Security',
    image: 'https://images.unsplash.com/photo-1563013544-824ae1b704d3?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80'
  },
  {
    id: 'integration-marketplace',
    title: 'Alias Efectivos y Alternativos: La Clave Para Proteger Tu Identidad',
    excerpt: 'Descubre cómo crear y gestionar alias efectivos para proteger tu identidad en un mundo hiperconectado.',
    date: 'February 18, 2025',
    author: 'Vicente Aguilar',
    authorRole: 'Privacy Researcher',
    category: 'Integrations',
    image: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80'
  }
];

const categories = [...new Set(posts.map(post => post.category))];



---
<Layout>
    <Header/>

<!-- Category Filter -->


<main class="mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl"> 
<div class="container-custom py-8">
        <div class="flex flex-wrap gap-4 justify-center mb-12">
          <a href="#" class="px-4 py-2 rounded-full bg-primary-600 text-white font-medium text-sm hover:bg-primary-700 transition-colors">
            All Posts
          </a>
          {categories.map((category) => (
            <a href={'#' + category.toLowerCase().replace(/\s+/g, '-')} class="px-4 py-2 rounded-full bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 font-medium text-sm hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
              {category}
            </a>
          ))}
        </div>
  
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post, index) => (
            <div class="card border border-gray-200 dark:border-gray-700 overflow-hidden slide-up bg-gradient-to-r from-black-900/80 to-gray-900/90" style={'animation-delay: ' + (index * 100) + 'ms'}>
              <a href={'/blog/' + post.id} class="block">
                <img 
                  src={post.image} 
                  alt={post.title}
                  class="w-full h-48 object-cover"
                  loading="lazy"
                />
              </a>
              <div class="p-6">
                <div class="flex items-center mb-4">
                  <span class="text-sm font-medium text-primary-600 dark:text-primary-400">{post.category}</span>
                  <span class="mx-2 text-gray-300 dark:text-gray-600">•</span>
                  <span class="text-sm text-gray-500 dark:text-gray-400">{post.date}</span>
                </div>
                <a href={'/blog/' + post.id} class="block mb-3">
                  <h2 class="text-xl font-semibold text-gray-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors">{post.title}</h2>
                </a>
                <p class="text-gray-600 dark:text-gray-300 mb-6">{post.excerpt}</p>
                <div class="flex items-center">
                  <div>
                    <p class="font-medium text-gray-900 dark:text-white">{post.author}</p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">{post.authorRole}</p>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
  
      
      </div>
    </main>









<Footer/>
</Layout>


<style>

  .card {
      border-radius: 0.75rem;
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  
  }
  
  main {
      margin-top: -12rem;
  }
  
  
  
  </style>